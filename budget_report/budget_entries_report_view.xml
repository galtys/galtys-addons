<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


    <record id="view_budget_entries_report_tree" model="ir.ui.view">
        <field name="name">budget.entries.report.tree</field>
        <field name="model">budget.entries.report</field>
        <field name="arch" type="xml">
            <tree string="Budget Entries Analysis" create="false">
	      <!--
                <field name="day" invisible="1"/>
                <field name="date" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="name" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="general_account_id" invisible="1"/>
                <field name="journal_id" invisible="1"/>
                <field name="product_id" invisible="1"/>
                <field name="product_uom_id" invisible="1"/>
-->

                <field name="month"/>
                <field name="year" invisible="1"/>
                <field name="company_id" invisible="1" groups="base.group_multi_company"/>
                <field name="account_id" groups="analytic.group_analytic_accounting"/>
                <field name="crossovered_budget_id" groups="analytic.group_analytic_accounting"/>
                <field name="general_budget_id" groups="analytic.group_analytic_accounting"/>

                <field name="nbr" sum="Entries"/>
                <field name="amount" sum="Amount"/>
                <field name="planned_amount" sum="Planned Amount"/>
                <field name="variance" sum="Variance"/>
            </tree>
        </field>
    </record>

    <record id="view_budget_entries_report_search" model="ir.ui.view">
        <field name="name">budget.entries.report.search</field>
        <field name="model">budget.entries.report</field>
        <field name="arch" type="xml">
            <search string="Budget Entries Analysis">
	      <!--
                <field name="day" string="Day"/>
                <field name="date"/>
                <filter string="My Entries" icon="terp-personal" domain="[('user_id','=',uid)]" help="My Entries"/>
                <field name="product_id" />
                <field name="user_id"/>
  -->
                <field name="account_id" groups="analytic.group_analytic_accounting"/>
                <field name="crossovered_budget_id" groups="analytic.group_analytic_accounting"/>
                <field name="general_budget_id" groups="analytic.group_analytic_accounting"/>
                <group expand="1" string="Group By...">
		  <!--
                    <filter string="User" name="User" icon="terp-personal" context="{'group_by':'user_id'}"/>
                    <filter string="Partner" icon="terp-partner" context="{'group_by':'partner_id'}"/>
                    <filter string="General Account" icon="terp-folder-orange" context="{'group_by':'general_account_id'}"/>
                    <filter string="Journal" icon="terp-folder-orange" context="{'group_by':'journal_id'}"/>
                    <filter string="Product" icon="terp-accessories-archiver" context="{'group_by':'product_id'}"/>
                    <filter string="Product Unit of Measure" icon="terp-mrp" context="{'group_by':'product_uom_id'}"/>
                    <filter string="Day" icon="terp-go-today" context="{'group_by':'day'}"/>
		    -->

                    <filter string="Account" name="Account" icon="terp-folder-green" context="{'group_by':'account_id'}" groups="analytic.group_analytic_accounting"/>
                    <filter string="Position" name="Position" icon="terp-folder-green" context="{'group_by':'general_budget_id'}" groups="analytic.group_analytic_accounting"/>
                    <filter string="Budget" name="Budget" icon="terp-folder-green" context="{'group_by':'crossovered_budget_id'}" groups="analytic.group_analytic_accounting"/>

                    <filter string="Company" icon="terp-go-home" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Month" name="Month" icon="terp-go-month" context="{'group_by':'month'}"/>
                    <filter string="Year" icon="terp-go-year" context="{'group_by':'year'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="view_account_analytic_entries_search" model="ir.ui.view">
         <field name="name">budget.entries.report.graph</field>
         <field name="model">budget.entries.report</field>
         <field name="arch" type="xml">
             <graph string="Budget Entries Analysis" type="bar">
<!--                <field name="user_id"/> -->
                <field name="month" operator="+"/>
                <field name="amount" operator="+"/>
             </graph>
         </field>
    </record>
    <record id="action_budget_entries_report" model="ir.actions.act_window">
        <field name="name">Budget Entries Analysis</field>
        <field name="res_model">budget.entries.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,graph</field>
	<field name="context">{}</field>
<!--        <field name="context">{'group_by_no_leaf':1, 'search_default_Budget':1, 'search_default_Account':1, 'search_default_Month':1,'search_default_Position':1, 'group_by':['crossovered_budget_id','account_id','month','general_budget_id']}</field>
-->
        <field name="search_view_id" ref="view_budget_entries_report_search"/>
        <field name="help">From this view, have an analysis of your different budget entries.</field>
    </record>


    <menuitem action="action_budget_entries_report"
              id="menu_action_budget_entries_report"
              groups="analytic.group_analytic_accounting"
              parent="account.menu_finance_reporting" sequence="4"/>



        <record model="ir.ui.view" id="view_form_budget_entries_wizard">
            <field name="name">budget.entries.wizard_open</field>
            <field name="model">budget.entries.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
	      <form string="budget.entries.wizard">
                  <group colspan="4">
                    <button  icon="terp-gtk-go-back-rtl" string="OK" name="action_open_entries" type="object"/>
                  </group>
               </form>
	      
            </field>
        </record>

        <act_window name="Budget Open Items"
                res_model="budget.entries.wizard"
                src_model="budget.entries.report"
                view_mode="form"
		multi="True"
                target="new"
		key2="client_action_multi"    
                id="action_budget_entries_open_wizard"
                />



        <record model="ir.ui.view" id="view_order_line_tree_cc">
            <field name="name">sale.order.line.tree_cc</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
		  <field name="delivery_date"/>
                  <field name="delivery_date2" invisible="1"/>
                </field>

            </field>
        </record>

        <record model="ir.ui.view" id="sale.view_sale_order_line_graph2">
            <field name="name">sale.order.line.graph2</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <graph string="Sales Order Lines" type="bar">
                    <field name="order_id"/>
                    <field name="product_uom_qty" operator="+"/>
                </graph>
            </field>
        </record>

        <record id="sale.view_sales_order_line_filter" model="ir.ui.view">
            <field name="name">sale.order.line.list.select</field>
            <field name="model">sale.order.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Sales Order Lines">
		  <field name="product_id"/>
		  <field name="delivery_date"/>
		  <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter string="Delivery Date" domain="[]" context="{'group_by':'delivery_date'}"/> 
                    </group>
               </search>
            </field>
        </record>





    <record id="action_order_line_form" model="ir.actions.act_window">
      <field name="name">Sales Order Lines</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sale.order.line</field>
      <field name="domain">[('state','in',['done','confirmed'])]</field> 
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_order_line_form" id="menu_sale_order_line" parent="base.menu_sales" sequence="4" groups="base.group_sale_salesman,base.group_sale_manager"/>


</data>
</openerp>
